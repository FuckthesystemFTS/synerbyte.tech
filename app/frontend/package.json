    "@capacitor/status-bar": "^6.0.0",
    "ethers": "^6.13.2",
    "libsodium-wrappers": "^0.7.13",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.0.0",
    "@types/libsodium-wrappers": "^0.7.14",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
